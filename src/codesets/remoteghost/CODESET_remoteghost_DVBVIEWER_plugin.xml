<?xml version="1.0" encoding="UTF-8"?>
<includes  xmlns:xi="http://www.w3.org/2001/XInclude">
  <!-- Translates Orca Actions to Interface Commands action = Orca Action
        String ('*' = default command) type = 'event' or 'key': tells, if Remoteghost
        should send an EventGhost event or a Keystroke cmd = command to send, either
        the event name, or the keystroke (look interface.py for keystrokes) -->

  <repositorymanager>
    <entry>
      <name>DVBViewer Event/Plugin Control by Eventghost</name>
      <description language='English'>DVBViewer Control using Eventghost / Plugin-Events</description>
      <description language='German'>DVBViewer Kontrolle Ã¼ber Eventghost / Plugin-Events</description>
      <author>Carsten Thielepape</author>
      <version>5.0.1</version>
      <minorcaversion>5.0.1</minorcaversion>
      <sources>
        <source>
          <local>$var(APPLICATIONPATH)/codesets/remoteghost/CODESET_remoteghost_DVBVIEWER_plugin.xml</local>
          <sourcefile>$var(REPOSITORYWWWPATH)/codesets/CODESET_remoteghost_DVBVIEWER_plugin.zip</sourcefile>
          <targetpath>codesets/remoteghost</targetpath>
        </source>
      </sources>
      <dependencies>
        <dependency>
          <type>interfaces</type>
          <name>Remoteghost Control for EventGhost</name>
        </dependency>
      </dependencies>
    </entry>
  </repositorymanager>

