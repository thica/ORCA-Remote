<?xml version="1.0" encoding="UTF-8"?>
<!-- Translates Orca Actions to Interface Commands action = Orca Action String
    ('*' = default command) type = 'event' or 'key': tells, if Remoteghost should
    send an EventGhost event or a Keystroke cmd = command to send, either the
    event name, or the keystroke (look interface.py for keystrokes) -->
<includes  xmlns:xi="http://www.w3.org/2001/XInclude">

  <repositorymanager>
    <entry>
      <name>KODI Key Control by Eventghost</name>
      <description language='English'>KODI Control using Eventghost / Keystrokes</description>
      <description language='German'>KODI Kontrolle Ã¼ber Eventghost / Tastaturbefehle</description>
      <author>Carsten Thielepape</author>
      <version>5.0.0</version>
      <minorcaversion>5.0.0</minorcaversion>
      <sources>
        <source>
          <local>$var(APPLICATIONPATH)/codesets/remoteghost/CODESET_remoteghost_KODI_key.xml</local>
          <sourcefile>$var(REPOSITORYWWWPATH)/codesets/CODESET_remoteghost_KODI_key.zip</sourcefile>
          <targetpath>codesets/remoteghost</targetpath>
        </source>
      </sources>
      <dependencies>
        <dependency>
          <type>interfaces</type>
          <name>Remoteghost Control for EventGhost</name>
        </dependency>
      </dependencies>
    </entry>
  </repositorymanager>
  <action string="codeset" name="*" type="event" cmd="*" />
  <action string="codeset" name="ok" type="key" cmd="{Enter}" />
  <action string="codeset" name="left" type="key" cmd="{Left}" />
  <action string="codeset" name="right" type="key" cmd="{Right}" />
  <action string="codeset" name="up" type="key" cmd="{Up}" />
  <action string="codeset" name="down" type="key" cmd="{Down}" />
  <action string="codeset" name="menu" type="key" cmd="c" />
  <action string="codeset" name="exit" type="key" cmd="{Backspace}" />
  <action string="codeset" name="info" type="key" cmd="i" />
  <action string="codeset" name="stop" type="key" cmd="x" />
  <action string="codeset" name="skip_back" type="key" cmd="," />
  <action string="codeset" name="skip_forward" type="key" cmd="." />
  <action string="codeset" name="play" type="key" cmd="p" />
  <action string="codeset" name="fast_rewind" type="key" cmd="r" />
  <action string="codeset" name="fast_forward" type="key" cmd="f" />
  <action string="codeset" name="pause" type="key" cmd="{space}" />
  <!-- Customized -->
  <action string="codeset" name="power_off" type="event" cmd="POWEROFF" />
  <!-- -->
  <action string="codeset" name="channel_down" type="key" cmd="{PageDown}" />
  <action string="codeset" name="page_down" type="key" cmd="{PageDown}" />
  <action string="codeset" name="channel_up" type="key" cmd="{PageUp}" />
  <action string="codeset" name="page_up" type="key" cmd="{PageUp}" />
  <action string="codeset" name="volume_up" type="key" cmd="+" />
  <action string="codeset" name="volume_down" type="key" cmd="-" />
  <action string="codeset" name="audiochannel_next" type="key" cmd="a" />
  <action string="codeset" name="mark_watched" type="key" cmd="m" />
  <action string="codeset" name="subtitles_toggle" type="key" cmd="t" />
  <action string="codeset" name="subtitles_next" type="key" cmd="l" />
  <action string="codeset" name="esc" type="key" cmd="{Esc}" />
  <action string="codeset" name="next_chapter" type="key" cmd="[" />
  <action string="codeset" name="previous_chapter" type="key" cmd="]" />
  <action string="codeset" name="send_string" type="key" cmd="$cvar(SENDTEXT)" />
  <!-- Plugin Commands assign to F1 -->
  <action string="codeset" name="menu2" type="key" cmd="{F1}" />
</includes>
