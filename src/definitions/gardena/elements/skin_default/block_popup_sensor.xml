<?xml version="1.0" encoding="utf-8"?>
<elements xmlns:xi="http://www.w3.org/2001/XInclude">
    <element name="Frame" type="PICTURE"  picturenormal="background boxes" />
    <element name="Button Back" type="BUTTON" posx="right" posy="top" width="%5" height="of:width:self" picturenormal="button wide*" action="Show Page" actionpars='{"pagename":"$var(LASTPAGE)"}' fontsize='%h50' caption="icon:close_window" />
    <element name="Anchor Frame" type="ANCHOR" posx="center" posy="middle" width="%95" height="%90">

        <element1 name='Picture Transmit'  type='PICTURE'    posx='of:left:Anchor Frame'   posy='of:top:Anchor Frame'  width='%4' height='of:width:self' picturenormal='transmit' enabled='0' />
        <element1 name='Picture Wait'      type='PICTURE'    posx='of:left:Anchor Frame'   posy='of:top:Anchor Frame'  width='%4' height='of:width:self' picturenormal='wait' enabled='0' />
        <element1 name='Label Device'      type='TEXTFIELD'  posx='center'   posy='of:top:Anchor Frame'  width='%25' height='of:width:self:*0.2' caption='$var($dvar(definition_alias_gardena)_DEVICENAME)' fontsize='%h60'/>
        <element1 name='Label Temperature' type='TEXTFIELD'  posx='of:left:Anchor Frame'   posy='of:bottom:last' width='%25' height='of:width:self:*0.2' caption='$var($dvar(definition_alias_gardena)_SENSOR_TEMPERATURE) &#176;$var($dvar(definition_alias_gardena)_SENSOR_TEMPERATURE_UNIT)' fontsize='%h60'/>
        <element1 name='Label Humidity'    type='TEXTFIELD'  posx='of:left:Anchor Frame'   posy='of:bottom:last' width='%25' height='of:width:self:*0.2' caption='$var($dvar(definition_alias_gardena)_SENSOR_HUMIDITY) $var($dvar(definition_alias_gardena)_SENSOR_HUMIDITY_UNIT)' fontsize='%h60'/>
        <element1 name='Label Light'       type='TEXTFIELD'  posx='of:left:Anchor Frame'   posy='of:bottom:last' width='%25' height='of:width:self:*0.2' caption='$var($dvar(definition_alias_gardena)_SENSOR_LIGHT) $var($dvar(definition_alias_gardena)_SENSOR_LIGHT_UNIT)' fontsize='%h60'/>



    </element>

</elements>
