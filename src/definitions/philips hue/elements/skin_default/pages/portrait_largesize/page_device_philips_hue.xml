<?xml version="1.0" encoding="UTF-8"?>
<page name='Page_Device_$dvar(definition_alias_philips_hue)'>
  <page_parameter>
    <interface>$var($dvar(definition_alias_philips_hue)_INTERFACE_MAIN)</interface>
    <configname>$var($dvar(definition_alias_philips_hue)_CONFIGNAME_MAIN)</configname>
  </page_parameter>
  <elements xmlns:xi="http://www.w3.org/2001/XInclude">
    <element name='Background Main Screen' type='BACKGROUND' picturenormal='background' />
    <element name='Picture Philips' type='PICTURE' posx='%98' posy='%20' width='%35' height='of:width:self:*0.5' picturenormal='$var(DEFINITIONPATH)/pics/logo.png' />

    <element name='Anchor BottomGap' type='ANCHOR' posx='left' posy='bottom' width='%100'  height='%1' />

    <element name='Anchor Lower Area' type='ANCHOR'  posy='of:totop:Anchor BottomGap' width='%100'  height='%45' >
      <element name="ColorPicker HUE" type="COLORPICKER" posx="%95" posy='bottom' width="%70" destvar="hue" action="$dvar(definition_alias_philips_hue) Set Lights Philips Hue by Widget" />
      <element name='Anchor Dimmer' type='ANCHOR' posx='%2' posy='bottom' width='%10' >
          <element name='Button Power On' type='BUTTON' pposy='top'    height='of:width:self'  picturenormal='button square*' action='$dvar(definition_alias_philips_hue) Fkt Philips Hue Power On'  fontsize='%h60' textcolor='$var(green)' caption='icon:power_on' />
          <element name="Slider Dimmer HUE" type="SLIDER" posx="center"  posy="middle" height='of:width:self:*5' picturenormal="background boxes" picturebutton="button square normal"  action="$dvar(definition_alias_philips_hue) Dim Lights Philips Hue by Widget"  mindatavalue="0" maxdatavalue="255" destvar="hue_v"  roundpos="0" orientation="vertical"/>
          <element name='Button Power Off' type='BUTTON' posy='bottom' height='of:width:self'  picturenormal='button square*' action='$dvar(definition_alias_philips_hue) Fkt Philips Hue Power Off' fontsize='%h60' textcolor='$var(red)' caption='icon:power_off' />
      </element>
    </element>

    <element name='Anchor BottomTop' type='ANCHOR' posx='left' posy='top' height='%6' />
    <element name='Anchor Lights' type='ANCHOR' posx='%5' posy='of:bottom:Anchor BottomTop' width='of:height:self' height='%45'>
      <xi:include href="$var(DEFINITIONPATH)/block_buttons_lightselect.xml" parse="xml" />
    </element>

  </elements>
</page>
