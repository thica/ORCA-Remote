        <source>
          <local>$var(APPLICATIONPATH)/definitions/setup</local>
          <sourcefile>$var(REPOSITORYWWWPATH)/definitions/setup.zip</sourcefile>
          <targetpath>definitions</targetpath>
        </source>
      </sources>
      <dependencies>
        <dependency>
          <type>others</type>
