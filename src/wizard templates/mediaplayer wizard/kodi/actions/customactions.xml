<?xml version="1.0" encoding="UTF-8"?>
<includes  xmlns:xi="http://www.w3.org/2001/XInclude">

    <!--- KODI Function linked to pagestart / pagestop-->

    <action name="Set Trigger $dvar(definition_alias_mediaplayer_template)">
        <action name="Add Trigger on Volume changed" string="addtrigger" triggername ="Application.OnVolumeChanged" actionname="trigger_on_$dvar(definition_alias_mediaplayer_template)volume" getvar="codesetcode:On_Volume_Changed" interface="$var($dvar(definition_alias_mediaplayer_template)_INTERFACE_VOLUME)" configname="$var($dvar(definition_alias_mediaplayer_template)_CONFIGNAME_VOLUME)" />
        <action name="Add Trigger on OnPlay"         string="addtrigger" triggername ="Player.OnPlay"               actionname="trigger_on_$dvar(definition_alias_mediaplayer_template)onplay" getvar="codesetcode:Player_On_Play"    interface="$var($dvar(definition_alias_mediaplayer_template)_INTERFACE_MAIN)"   configname="$var($dvar(definition_alias_mediaplayer_template)_CONFIGNAME_MAIN)" />
    </action>

    <action name="Delete Trigger $dvar(definition_alias_mediaplayer_template)">
        <action name="Delete Trigger on Volume changed" string="addtrigger" triggername ="Application.OnVolumeChanged"  />
        <action name="Delete Trigger on OnPlay"         string="addtrigger" triggername ="Player.OnPlay"                />
    </action>

    <action name="trigger_on_$dvar(definition_alias_mediaplayer_template)volume">
        <!-- even if we got passed the new main volume, it is easier to ask kodi for the cureent volume using the default functions -->
        <action name="Get Volume" string="call FKT GetVolume_$dvar(definition_alias_mediaplayer_template)" />
    </action>

    <action name="trigger_on_$dvar(definition_alias_mediaplayer_template)onplay">
        <action name="Set the Id" string="setvar kodi_movieid=$var(kodi_id)" />
        <action name="Get the movie details" string="sendcommand getmoviedetails" interface="$var($dvar(definition_alias_mediaplayer_template)_INTERFACE_MAIN)" configname="$var($dvar(definition_alias_mediaplayer_template)_CONFIGNAME_MAIN)" />
    </action>


    <action name="Send Subtitles Toggle $dvar(definition_alias_mediaplayer_template)">
        <action name="Send Subtitles Off"  string="call Send Subtitles On"  condition="$var($dvar(definition_alias_mediaplayer_template)_SUBTITLESTATE)==0"/>
        <action name="Send Subtitles On"  string="call Send Subtitles Off"  condition="$var($dvar(definition_alias_mediaplayer_template)_SUBTITLESTATE)==1"/>
        <action name="Set the State Variable" string="modifyvar" varname="$dvar(definition_alias_mediaplayer_template)_SUBTITLESTATE"  operator="invert"/>
    </action>

